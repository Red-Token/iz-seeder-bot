{
  "name": "iz-seeder-bot",
  "type": "module",
  "version": "0.0.1",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS='--loader=ts-node/esm --require mock-local-storage' mocha 'test/**/*.test.ts'",
    "start": "node --require mock-local-storage --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "build": "gts clean && node ./esbuild.config.js",
    "serve": "pm2 start dist/index.js --name iz-seeder-bot --no-daemon",
    "distformat": "npx prettier --write dist --ignore-path /dev/null",
    "server": "npm run build && npm run serve",
    "docker": "npm run build && sudo ./build.sh",
    "restart": "npm run build && sudo ./restart.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "ts-node": {
    "experimentalSpecifierResolution": "nodenext",
    "experimentalResolver": true,
    "transpileOnly": false,
    "esm": true,
    "logError": true
  },
  "devDependencies": {
    "@red-token/welshman": "^0.2.9",
    "@testdeck/mocha": "^0.3.3",
    "@types/chai": "^5.0.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.12.0",
    "@types/node-localstorage": "^1.3.3",
    "@types/simple-peer": "^9.11.8",
    "@types/ssh2": "^1.15.4",
    "@types/webtorrent": "^0.110.0",
    "chai": "^5.2.0",
    "esbuild": "^0.25.0",
    "fast-xml-parser": "^5.0.9",
    "fs-extra": "^11.3.0",
    "gts": "^6.0.2",
    "iz-nostrlib": "^0.2.4",
    "localStorage": "^1.0.4",
    "mocha": "^10.8.2",
    "mock-local-storage": "^1.1.24",
    "mp4box": "^0.5.4",
    "mpd-parser": "^1.3.1",
    "nostr-tools": "^2.10.4",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "simple-peer": "^9.11.1",
    "ssh2": "^1.16.0",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "tsc-multi": "^1.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "node-localstorage": "^3.0.5",
    "fluent-ffmpeg": "^2.1.3",
    "webtorrent": "^2.6.0"
  }
